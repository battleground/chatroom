<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.abooc.im">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">

        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".unittest.DebugListActivity"
            android:label="开发者模式"
            android:launchMode="singleTask"
            android:parentActivityName=".activity.LoginActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".unittest.TestAnimActivity"
            android:label="动效测试"
            android:parentActivityName=".unittest.DebugListActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".activity.LeanCloudIMActivity"
            android:parentActivityName=".unittest.DebugListActivity"
            android:screenOrientation="portrait"
            android:label="LC实时通信">
        </activity>

        <activity
            android:name=".activity.GiftSamplesActivity"
            android:screenOrientation="portrait"
            android:label="收发礼物">
        </activity>


        <activity
            android:name=".push.LeanCloudPushActivity"
            android:screenOrientation="portrait"
            android:label="LC消息推送">
        </activity>

        <activity
            android:name=".activity.Claim"
            android:label="领取金币"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

        <activity
            android:name=".push.NotifyActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".push.Callback1"
            android:screenOrientation="portrait"
            android:label="Callback1" />
        <activity
            android:name=".push.Callback2"
            android:screenOrientation="portrait"
            android:label="Callback2" />


        <service android:name="com.avos.avoscloud.PushService" />

        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity android:name=".notifications.NotificationsActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>