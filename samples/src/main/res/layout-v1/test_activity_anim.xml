<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onChargeGold"
        android:padding="12dp"
        android:shadowColor="#EEDD33"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="4,000"
        android:textColor="#FFBB33"
        android:textSize="50sp"
        android:textStyle="bold" />

    <include layout="@layout/joker_line_h_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onSendVipGift"
            android:padding="12dp"
            android:text="VIP Anim" />

        <include layout="@layout/joker_line_v_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onPlaySoundUp"
            android:padding="12dp"
            android:text="Sound +" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onPlaySoundDown"
            android:padding="12dp"
            android:text="Sound -" />
    </LinearLayout>

    <include layout="@layout/joker_line_h_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onAnim"
            android:padding="12dp"
            android:text="X Anim" />

        <include layout="@layout/joker_line_v_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onGoAndOn"
            android:padding="12dp"
            android:text="In +" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onGoAndDown"
            android:padding="12dp"
            android:text="Out -" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onGoAndAuto"
            android:padding="12dp"
            android:text="Auto" />
    </LinearLayout>

    <include layout="@layout/joker_line_h_gray" />

    <LinearLayout
        android:id="@+id/goAndOnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/autoGoonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/X"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="12dp"
        android:shadowColor="#ffffff99"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="6"
        android:text="X 3"
        android:textSize="120sp"
        android:textStyle="bold" />

</LinearLayout>