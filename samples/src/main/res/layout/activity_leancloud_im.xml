<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFF"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:onClick="onLogin"
            android:padding="12dp"
            android:text="登录" />

        <include layout="@layout/joker_item_blank" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:onClick="onJoinConversation"
            android:padding="12dp"
            android:text="加入会话" />

        <include layout="@layout/joker_line_h_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:onClick="onJoinConversation2"
            android:padding="12dp"
            android:text="加入会话 2" />

        <include layout="@layout/joker_line_h_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_item_selector"
            android:clickable="true"
            android:onClick="onLoadHistory"
            android:padding="12dp"
            android:text="获取历史消息" />

        <include layout="@layout/joker_line_h_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:onClick="onStartReceived"
            android:padding="12dp"
            android:text="接收新消息" />

        <include layout="@layout/joker_item_blank" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:onClick="onSendDefaultMessage"
            android:padding="12dp"
            android:text="发送 【默认文本消息】" />

        <include layout="@layout/joker_line_h_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:onClick="onSendCustomMessage"
            android:padding="12dp"
            android:text="发送 【自定义普通消息】" />

        <include layout="@layout/joker_line_h_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:onClick="onSendSystemMessage"
            android:padding="12dp"
            android:text="发送 【系统消息】" />

        <include layout="@layout/joker_item_blank" />

        <TextView
            android:id="@+id/gifts_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:onClick="onSendGiftsMessage"
            android:padding="12dp"
            android:text="发送 【礼物1】" />

        <include layout="@layout/joker_line_h_gray" />

        <TextView
            android:id="@+id/gifts_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:onClick="onSendGiftsMessage"
            android:padding="12dp"
            android:text="发送 【礼物2】" />

        <include layout="@layout/joker_line_h_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="接收："
            android:textSize="10sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEE"
            android:padding="12dp"
            android:text="message" />
    </LinearLayout>
</ScrollView>